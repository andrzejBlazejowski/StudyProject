<UserControl x:Class="StudyProject.Components.topNavComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudyProject.Components"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <ToolBarTray Width="800" Orientation="Horizontal" VerticalAlignment="Top">
            <ToolBar  Width="800">
                <Button Command="{Binding NavigateAllBrandsCmd}" ToolTip="Dodaj">
                    <Label>Dodaj</Label>
                    <!-- <Image Source="" />-->
                </Button>
                <Button Command="{Binding NavigateAllBrandsCmd}" ToolTip="Usun">
                    <Label>Usun</Label>
                </Button>
                <Button Command="{Binding NavigateAllBrandsCmd}" ToolTip="zapisz">
                    <Label>zapisz</Label>
                </Button>
                <Button Command="{Binding NavigateAllBrandsCmd}" ToolTip="zapisz i zamknij">
                    <Label>zapisz i zamknij</Label>
                </Button>
            </ToolBar>
        </ToolBarTray>
    </Grid>
</UserControl>
